import sys
import math

def main():
    has_error = False
    for line in sys.stdin:
        try:
            line_content = line.strip()
            if not line_content:
                continue
            
            n = float(line_content)
            if n < 1:
            
                print(f"Error: Invalid input {n}. Must be >= 1", file=sys.stderr)
                has_error = True
                continue

            lognovalue = math.log10(n)
            length = int(lognovalue * 20)
            print(f"{n:7.2f} | {lognovalue:6.6f} | {'0' * length}")

        except ValueError:
            print(f"Error: '{line.strip()}' is not a number", file=sys.stderr)
            has_error = True
            continue

    if has_error:
        sys.exit(1)

if __name__ == "__main__":
    main()
        
