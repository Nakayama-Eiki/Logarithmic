import sys
import math

exit_status = 0

for line in sys.stdin:
    line_content = line.strip()
    if not line_content:
        continue
    try:
        n = float(line_content)
        if n < 1:
            exit_status = 1
            continue
        lognovalue = math.log10(n)
        length = int(lognovalue * 20)
        print(f"{n:7.2f} | {lognovalue:6.6f} | {'0' * length}")
    except ValueError:
        exit_status = 1
        continue

sys.exit(exit_status)        
